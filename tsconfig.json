{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "./dist",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "lib": [
            "DOM",
            "ES2021",
            "ES2022"
        ],
        "target": "es6"
    },
    "include": [
        "./src/**/*"
    ]
}